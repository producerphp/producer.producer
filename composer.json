{
    "name": "producer/producer",
    "type": "library",
    "description": "Tools for releasing library packages; supports Git, Mercurial, Github, Gitlab, and Bitbucket.",
    "keywords": [
        "library",
        "package",
        "git",
        "hg",
        "mercurial",
        "github",
        "gitlab",
        "bitbucket"
    ],
    "homepage": "https://github.com/producerphp/producer.producer",
    "license": "MIT",
    "authors": [
        {
            "name": "Producer Contributors",
            "homepage": "https://github.com/producerphp/producer.producer/contributors"
        }
    ],
    "require": {
        "php": "^8.1",
        "psr/log": "^2.0",
        "pmjones/auto-shell": "1.x@dev",
        "pmjones/caplet": "^1.0"
    },
    "require-dev": {
        "pds/composer-script-names": "^1.0",
        "pds/skeleton": "^1.0",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Producer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Producer\\": "tests/"
        }
    },
    "bin": [
        "bin/producer"
    ],
    "scripts": {
        "analyze": "./vendor/bin/phpstan analyze -c phpstan.neon",
        "check": "composer test && composer analyze",
        "test": "./vendor/bin/phpunit",
        "test-coverage": "./vendor/bin/phpunit --coverage-html=./tmp/coverage"
    }
}
